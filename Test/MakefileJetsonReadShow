BNO055_DIR = $(HOME)/Mario/BNO055-BBB_IMU-Driver
CPPFLAGS = -g -Wall -std=c++11 -I $(BNO055_DIR)/include 

CC = g++ 
PROJECT = readShow
SRC = readShow.cpp
LIBS = `pkg-config --cflags --libs opencv4` -lncurses $(BNO055_DIR)/objs/BNO055-BBB_driver.o -lpthread
$(PROJECT) : $(SRC)
	$(CC) $(CPPFLAGS) $(SRC) -o $(PROJECT) $(LIBS)

clean:
	rm $(PROJECT)
